<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="dns-prefetch" href="https://cp-portfolio.s3.amazonaws.com">

    <title><%= yield(:title) %> | Cameron Prebble</title>

    <link href='http://fonts.googleapis.com/css?family=Merriweather:400,300,700' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "application" %>

  </head>

  <body>
    <%= yield %>

    <footer class='container text-center'>
      <hr>
      <p>&copy; <%= Date.today.year %>
        <%= link_to 'Cameron Prebble', 'http://cameron-prebble.com' %></p>
      <p>
        <%= link_to icon('github', 'Fork this project on github' ), 'https://github.com/campreb/simple_portfolio' %>
      </p>
    </footer>

    <%= javascript_include_tag  "application" %>
  </body>
</html>
